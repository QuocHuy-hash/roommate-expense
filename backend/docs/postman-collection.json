{
  "info": {
    "name": "RoomMate Expense Management API",
    "description": "Collection for testing RoomMate Expense Management API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3001",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/health",
              "host": ["{{baseUrl}}"],
              "path": ["health"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const responseJson = pm.response.json();",
                  "    pm.collectionVariables.set('token', responseJson.token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\",\n  \"firstName\": \"Test\",\n  \"lastName\": \"User\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "register"]
            }
          },
          "response": []
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const responseJson = pm.response.json();",
                  "    pm.collectionVariables.set('token', responseJson.token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "login"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Expenses",
      "item": [
        {
          "name": "Get All Expenses",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/expenses",
              "host": ["{{baseUrl}}"],
              "path": ["api", "expenses"]
            }
          },
          "response": []
        },
        {
          "name": "Create Expense",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Grocery Shopping\",\n  \"amount\": \"150.75\",\n  \"description\": \"Weekly grocery shopping at supermarket\",\n  \"isShared\": true,\n  \"imageUrl\": \"https://example.com/receipt.jpg\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/expenses",
              "host": ["{{baseUrl}}"],
              "path": ["api", "expenses"]
            }
          },
          "response": []
        },
        {
          "name": "Update Expense",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Updated Grocery Shopping\",\n  \"amount\": \"175.25\",\n  \"description\": \"Updated weekly grocery shopping\",\n  \"isShared\": true,\n  \"imageUrl\": \"https://example.com/new-receipt.jpg\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/expenses/:id",
              "host": ["{{baseUrl}}"],
              "path": ["api", "expenses", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "expense-id-here",
                  "description": "Replace with actual expense ID"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Delete Expense",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/expenses/:id",
              "host": ["{{baseUrl}}"],
              "path": ["api", "expenses", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "expense-id-here",
                  "description": "Replace with actual expense ID"
                }
              ]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Settlements",
      "item": [
        {
          "name": "Get All Settlements",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/settlements",
              "host": ["{{baseUrl}}"],
              "path": ["api", "settlements"]
            }
          },
          "response": []
        },
        {
          "name": "Create Settlement",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"payeeId\": \"payee-user-id-here\",\n  \"amount\": \"75.50\",\n  \"description\": \"Settlement for shared expenses\",\n  \"imageUrl\": \"https://example.com/transfer-receipt.jpg\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/settlements",
              "host": ["{{baseUrl}}"],
              "path": ["api", "settlements"]
            }
          },
          "response": []
        }
      ]
    }
  ]
}
